  //---------------------------------------------------------------------------
  // Grid Items
  //---------------------------------------------------------------------------  
  
  "gamepad_action_item": {
    "type": "grid_item",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", 26 ],
    "controls": [
      {"action_panel@gamepad_action_item_button_default_state":{}},
      {"binding_button@gamepad_binding_button":{}}
    ]
  },

  
  "gamepad_action_grid": {
    "type": "grid",
    "grid_item_template": "gamepad_action_item",
    "grid_dimension_binding": "#gamepad_action_item_grid_dimension",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ "100%-14px", "100%" ],
    "bindings": [
      { "binding_name": "#gamepad_action_item_grid_dimension",
        "binding_type": "global"
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Panels
  //---------------------------------------------------------------------------
  
  "root_panel_common": {
    "type": "panel",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "size": [ "100%", "100%" ],
    "controls": [
      {"root_button@normal_stroke_button": {"layer" : 1}},
      {"header_text@header": {}},
      {"bindings_text@bindings": {}},
      {"actions_text@actions": {}},
      {"root_edit_panel@gamepad_edit_panel": {}},
      {"root_bottom_buttons@bottom_buttons": {"layer" : 2}},
      {"input_siphon@ghost_binding": { "visible": false }}
    ],
    "bindings": [
      {"binding_name": "#root_visible",
      "binding_name_override": "#visible",
      "binding_type": "global"}
    ]
  },
  
  "cda_panel": {
    "type": "panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "size": [ "70%", "60%" ],
    "controls": [
      {"bg@normal_stroke_button": {}},
      {"cda_text@confirmation_text": {}},
      {"test_buttons@cda_button_buttons": {}}
    ],
    "bindings": [
      {"binding_name": "#cda_visible",
      "binding_name_override": "#visible",
      "binding_type": "global"}
    ]
  },
  
  "gamepad_action_binding": {
    "type": "panel",
    "anchor_to": "top_right",
    "anchor_from": "top_right",
    "size": [ "45%", 25 ],
    "offset": [0, 2],
    "controls": [
      {"binding_bg@dark_thin_button": {}},
      {"binding_txt@gamepad_binding": {}}
    ]
  },
  
  "gamepad_edit_panel" : {
    "type": "panel",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "size": [ "100%-14px" , "68%"],
    "offset": [0, "15%"],
    "controls": [
	  {"background@indent": {
        "anchor_to": "top_left",
        "anchor_from": "top_left",
        "size": [ "100%-14px", "100%" ]
      }},
      {"scroll_track@indent": {
        "anchor_from": "right_middle",
        "anchor_to": "right_middle",
        "size": [ "10px", "100%-2px" ],
        "offset": [0, 0]
      }},
      {"scroll_section": {
        "type": "panel",
        "anchor_to": "top_left",
        "anchor_from": "top_left",
        "size": [ "100%", "100%-3px" ],
        "offset":[0, 1],
        "clips_children": true,
        "layer": 1,
        "controls": [
          {"scroll@common.scroll": {
            "size": [ "10px", "100%" ],
            "anchor_from": "top_right",
            "anchor_to": "top_right",
            "scrollbar_box": "box",
            "controls": [
              {"box@common.scroll_box": {
                 "anchor_to": "top_left",
                 "anchor_from": "top_left",
                 "size": [ "10px", 16 ],
                 "controls": [
                   {"thin_button@gamepad_layout.normal_thin_button": {"layer": 2}}
                 ]
              }}
            ]
          }},
          {"gamepad_grid@gamepad_action_grid": {"layer": 2}}
        ]
      }}
    ]
  },
  
  "ghost_binding" : {
    "type": "input_panel",
    "button_mappings": [{"from_button_id": "any", "condition": "none"}],
    "bindings": [
      {"binding_name": "#binding_state",
      "binding_name_override": "#visible",
      "binding_type": "global"}
    ]
  },
  //---------------------------------------------------------------------------
  // Screen
  //---------------------------------------------------------------------------
  "screen_common": {
    "type": "screen",
    "button_mappings": [
      {"from_button_id": "button.menu_cancel",
       "to_button_id": "button.menu_exit",
       "condition": "none"
      },
      {"from_button_id": "button.menu_up",
       "to_button_id": "button.menu_up",
       "condition": "none",
       "scope": "view"
      },
      {"from_button_id": "button.menu_down",
       "to_button_id": "button.menu_down",
       "condition": "none",
       "scope": "view"
      },
      {"from_button_id": "button.menu_left",
       "to_button_id": "button.menu_left",
       "condition": "none",
       "scope": "view"
      },
      {"from_button_id": "button.menu_right",
       "to_button_id": "button.menu_right",
       "condition": "none",
       "scope": "view"
      },
      {"from_button_id": "button.menu_tab_left",
       "to_button_id": "button.menu_tab_left",
       "condition": "none",
       "scope": "view"
      },
      {"from_button_id": "button.menu_tab_right",
       "to_button_id": "button.menu_tab_right",
       "condition": "none",
       "scope": "view"
      }
    ]
  },
  
  "layout@screen_common": {
    "controls": [
      {"menu_background": {
        "type": "custom",
        "renderer": "menu_background_renderer"
      }},
      {"fade_panel@cda_panel" : {}},
      {"root_panel@root_panel_common" : {}}
    ]
  }
  
