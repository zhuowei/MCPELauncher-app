{
  "namespace": "common-classic",

  "button": {
    "type": "button",
    "layer": 1,
    "size": [ 100, 20 ],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",
    "focus_enabled": true,
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "condition": "hover"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_select",
        "condition": "focus"
      }
    ]
  },

  "button_state_default": {
    "type": "image",
    "texture": "gui/newgui/classic-button.png",
    "nineslice_size": 2.0,
    "uv_size": [ 5, 5 ]
  },

  "button_state_hover@button_state_default": {
    "texture": "gui/newgui/classic-button-hover.png"
  },

  "button_state_pressed@button_state_default": {
    "texture": "gui/newgui/classic-button-pressed.png"
  }
}
